        <Button x:Name="EuroButton" Content="Markoiksi" HorizontalAlignment="Left" Margin="62,212,0,0" VerticalAlignment="Top" Height="32" Width="88" Click="EuroButton_Click"/>
        <Button x:Name="MarkkaButton" Content="Euroiksi" HorizontalAlignment="Left" Margin="51,212,0,0" VerticalAlignment="Top" Height="32" Width="93" Grid.Column="1" Click="MarkkaButton_Click"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="141,176,0,0" TextWrapping="Wrap" Text="mk" VerticalAlignment="Top"/>
        <TextBlock x:Name="textBlock1" Grid.Column="1" HorizontalAlignment="Left" Margin="136,176,0,0" TextWrapping="Wrap" Text="€" VerticalAlignment="Top"/>

    </Grid>
</Page>
